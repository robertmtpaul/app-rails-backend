<div class="form-group">

  <%= form_with(model: post_photo, local: true, html: {multipart: true}) do |form| %>
    <% if post_photo.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post_photo.errors.count, "error") %> prohibited this post_photo from being saved:</h2>

        <ul>
        <% post_photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= label_tag :post %>
        <%= collection_select(:post, :id, @current_user.posts, :id, :user_post, prompt: true) %>
    </div>

    <div class="field">
      <%= form.label :photo %>
        <%# cl_image_upload_tag :user_photo %>
        <%= file_field_tag "images[]", :multiple => true %>
    </div>

    <div class="actions">
      <%= form.submit :class=>'btn btn-secondary' %>
    </div>
  <% end %>
</div>
